<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aliya.adapter.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AdapterUnifyDataSampleActivity"
            android:label="通用示例" />
        <activity
            android:name=".activity.DecorAdapterListSampleActivity"
            android:label="列表样式" />
        <activity
            android:name=".activity.DecorAdapterGridSampleActivity"
            android:label="Grid样式" />
        <activity
            android:name=".activity.AdapterDiffDataSampleActivity"
            android:label="多item类型" />
        <activity
            android:name=".activity.DecorAdapterLoadMoreSampleActivity"
            android:label="下拉刷新 - 上拉加载" />
        <activity
            android:name=".activity.OverlaySampleActivity"
            android:label="悬浮吸顶" />
        <activity
            android:name=".activity.EmptyPageSampleActivity"
            android:label="空页面" />
        <activity
            android:name=".activity.TestRefreshActivity"
            android:label="测试下拉刷新" />
        <activity
            android:name=".activity.StaggeredSampleActivity"
            android:label="瀑布流样式" />
        <activity
            android:name=".activity.TestActivity"
            android:label="测试 header footer 异常" />
        <activity
            android:name=".activity.Test2Activity"
            android:label="测试 header footer 异常" />
        <activity
            android:name=".activity.AnimationActivity"
            android:label="测试 RecyclerView 动画效果" />
    </application>

</manifest>